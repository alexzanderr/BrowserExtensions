{
    "version": "1.0",
    "name": "TyperacerAnalytics",
    "description": "built only for play.typeracer.com, 10fastfingers.com and typing.io to store analytics about typing sessions",
    "manifest_version": 2,

    "content_scripts": [
        {
            "matches": [
                "https://10fastfingers.com/*",
                "https://typing.io/*",
                "https://play.typeracer.com/*"
            ],
            "js": [
                "loadtime.js",
                "background.js"
            ]
        }
    ],

    "icons": {
      "48": "icons/ext.png"
    }

}